{
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
    { "src": "/_next/static/(.*)", "dest": "/next-app/out/_next/static/$1" },
    { "src": "/(.*)", "dest": "/next-app/out/$1" },
    { "src": "/(.*)", "dest": "/next-app/out/index.html" }
  ]
}
